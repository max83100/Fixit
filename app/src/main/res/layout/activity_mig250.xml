<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mig.MIG250">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/warning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="@string/warning"
                />

            <Button
                android:id="@+id/linkmig250"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/button_shape"
                android:layout_gravity="center"
                android:onClick="onClick"
                android:text="Скачать схемы и инструкции" />

            <Button
                android:id="@+id/webmig250"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@drawable/button_shape"
                android:onClick="onClick"
                android:text="Обзор и характеристики" />

            <TextView
                android:id="@+id/mig250_motor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="30dp"
                android:text="Не работает подача проволоки"
                android:textColor="#050505"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/mig250_motor_image"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                app:srcCompat="@drawable/aclocate" />

            <TextView
                android:id="@+id/mig250_motor_resolve"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Если при нажатии на кнопку горелки у вас ничего не происходит
то проверьте узел отвечающий за включение мотора подачи проволоки" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>