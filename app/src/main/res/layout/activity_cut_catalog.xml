<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cut_cat"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CUT_catalog">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/cut40_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="CUT 40 "
                android:textColor="#151515"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/cut_40"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_weight="1"
                android:onClick="onClick"
                app:srcCompat="@drawable/cut40" />

            <TextView
                android:id="@+id/cut40com_text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="55dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="CUT 40 COM"
                android:textColor="#151515"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/cut_40com"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_weight="1"
                android:onClick="onClick"
                app:srcCompat="@drawable/cut40com" />

            <TextView
                android:id="@+id/cut45p_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="55dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="ENERGY CUT 45P"
                android:textColor="#151515"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/cut_45p"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_weight="1"
                android:onClick="onClick"
                app:srcCompat="@drawable/cut45p" />

            <TextView
                android:id="@+id/cut60_text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="55dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="CUT 60"
                android:textColor="#151515"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/cut_60"
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:layout_weight="1"
                android:onClick="onClick"
                app:srcCompat="@drawable/cut60" />

            <TextView
                android:id="@+id/cut100s_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="55dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="CUT 100S"
                android:textColor="#151515"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/cut_100_s"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_weight="1"
                android:onClick="onClick"
                app:srcCompat="@drawable/cut100s" />

            <TextView
                android:id="@+id/cut120_text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="55dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="CUT 120"
                android:textColor="#151515"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/cut_120"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_weight="1"
                android:onClick="onClick"
                app:srcCompat="@drawable/cut120" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>