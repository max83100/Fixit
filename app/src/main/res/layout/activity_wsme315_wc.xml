<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tig.WSME315WC">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >



            <TextView
                android:id="@+id/warning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="@string/warning"
                />

            <Button
                android:id="@+id/linkwsme315wc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/button_shape"
                android:layout_gravity="center"
                android:onClick="onClick"
                android:text="Скачать схемы и инструкции" />

            <Button
                android:id="@+id/webwsme315wc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@drawable/button_shape"
                android:onClick="onClick"
                android:text="Обзор и характеристики" />

            <TextView
                android:id="@+id/wsme_315wc_arc_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="30dp"
                android:text="Ошибка при старте сварки"
                android:textColor="#0E0E0E"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/wsme_315wc_arc_error_image2"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_gravity="center"
                android:layout_marginBottom="15dp"
                app:srcCompat="@drawable/ic_launcher_foreground" />

            <ImageView
                android:id="@+id/wsme_315wc_arc_error_image"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_launcher_foreground" />

            <TextView
                android:id="@+id/wsme_315wc_arc_error_resolve"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Если при нажатии на кнопку на холостую у вас сразу появляется ошибка то вам нужно заменить
резисторы R11, R27  на 10Kом; R19 R35 изменить на 2Kом" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>