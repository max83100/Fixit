<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ARC_catalog">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/arc160_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="ENERGY ARC 160"
                android:textColor="#151515"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/arc160"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_weight="1"
android:onClick="onClick"
                app:srcCompat="@drawable/energy_arc160" />

            <TextView
                android:id="@+id/mma200tec_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="ENERGY MMA 200 TEC"
                android:textColor="#151515"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/mma200tec"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_weight="1"
                android:onClick="onClick"
                app:srcCompat="@drawable/mma200tec" />

            <TextView
                android:id="@+id/arc220_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="55dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="ENERGY ARC 220"
                android:textColor="#151515"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/arc220"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_weight="1"
                android:onClick="onClick"
                app:srcCompat="@drawable/energy_arc220" />

            <TextView
                android:id="@+id/arc400_text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="55dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="ARC 300 - 400 ПДУ"
                android:textColor="#151515"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/arc_400"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_weight="1"
                android:onClick="onClick"
                app:srcCompat="@drawable/arc300" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>